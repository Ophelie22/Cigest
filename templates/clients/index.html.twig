{% extends 'base.html.twig' %}

{% block title %}Clients index{% endblock %}

{% block body %}
    <h1>Clients index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>DatedeNaissance</th>
                <th>Adresse</th>
                <th>Codepostal</th>
                <th>Ville</th>
                <th>FonctionDanslaSté</th>
                <th>Sociéte</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.nom }}</td>
                <td>{{ client.prenom }}</td>
                <td>{{ client.DatedeNaissance ? client.DatedeNaissance|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ client.adresse }}</td>
                <td>{{ client.codepostal }}</td>
                <td>{{ client.ville }}</td>
                <td>{{ client.FonctionDanslaSté }}</td>
                <td>{{ client.Sociéte }}</td>
                <td>
                    <a href="{{ path('app_clients_show', {'id': client.id}) }}">show</a>
                    <a href="{{ path('app_clients_edit', {'id': client.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_clients_new') }}">Create new</a>
{% endblock %}
